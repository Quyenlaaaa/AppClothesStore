<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.TimKiemActivity">
    <LinearLayout
        android:id="@+id/framesearch"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconbackhome"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_back"
            android:layout_marginEnd="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:background="@drawable/shapetimkiem"
            tools:ignore="ExtraText">

            <EditText
                android:id="@+id/txtsearch"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="#DFEADFDF"
                android:fontFamily="@font/montserrat_extralight"
                android:hint="Tìm kiếm"
                android:textColorHint="@color/black"
                tools:ignore="TouchTargetSizeCheck" />                   />
            <ImageView
                android:id="@+id/iconsearch"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/iconsearch"/>
        </LinearLayout>

    </LinearLayout>

    <GridView
        android:id="@+id/tksanpham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="2" />

</LinearLayout>