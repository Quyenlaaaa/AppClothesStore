<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp">
    <RelativeLayout
        android:id="@+id/anh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="38dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <RelativeLayout
            android:id="@+id/sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/combo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_22"
                    >

                </ImageView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/combo1">
                <RelativeLayout
                    android:id="@+id/tensp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Áo khoác nam Kaki - hiệu NokiaSamsung"
                        android:textSize="14sp"
                        android:textStyle="bold">

                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tensp">
                    <ImageView
                        android:id="@+id/dollar"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/currencycircledollar"
                        android:layout_centerVertical="true">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50.000d"
                        android:layout_toRightOf="@+id/dollar"
                        android:textStyle="bold">

                    </TextView>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/sizem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="26dp"
        android:paddingBottom="20dp"
        android:layout_below="@+id/anh">
        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size M"
                    android:textSize="20sp"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/size"
                    android:text="154 - 162 cm , 41 -46 kg "></TextView>
            </RelativeLayout>
            <CheckBox
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"></CheckBox>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/sizel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="26dp"
        android:paddingBottom="20dp"
        android:layout_below="@+id/sizem">
        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tensizel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size L"
                    android:textSize="20sp"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tensizel"
                    android:text="158 - 164 cm , 47 -52 kg "></TextView>
            </RelativeLayout>
            <CheckBox
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"></CheckBox>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sizexl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="26dp"
        android:paddingBottom="20dp"
        android:layout_below="@+id/sizel">
        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tensizexl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size XL"
                    android:textSize="20sp"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tensizexl"
                    android:text="162 -168 cm , 59 - 64 kg "></TextView>
            </RelativeLayout>
            <CheckBox
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"></CheckBox>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sizexxl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="26dp"
        android:paddingBottom="20dp"
        android:layout_below="@+id/sizexl">
        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tensizexxl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size XL"
                    android:textSize="20sp"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tensizexxl"
                    android:text="162 -168 cm , 59 - 64 kg "></TextView>
            </RelativeLayout>
            <CheckBox
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"></CheckBox>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_below="@+id/sizexxl">
        <RelativeLayout
            android:id="@+id/gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="25dp"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/tamtinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tạm tính : "
                android:textSize="18sp"
                android:textColor="#9B9B9B"
                android:textStyle="bold"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tamtinh"
                android:text="50.000đ"
                android:textStyle="bold"
                android:textSize="20sp"></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gia">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <Button
                    android:id="@+id/tru"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="-"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#0A895D"
                    android:background="#ECECEC"
                    ></Button>
                <TextView
                    android:id="@+id/sl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tru"
                    android:text="   1   "
                    android:textSize="20sp"></TextView>
                <Button
                    android:id="@+id/cong"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/sl"
                    android:text="+"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#0A895D"
                    android:background="#ECECEC"
                    ></Button>
            </RelativeLayout>
            <Button
                android:id="@+id/themvaogiohang"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="#0A895D"
                android:textColor="@color/white"
                android:text="Thêm vào giỏ hàng"
                android:onClick="nextPage"></Button>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>