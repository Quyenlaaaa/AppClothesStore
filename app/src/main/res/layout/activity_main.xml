<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/back"
        android:gravity="center"
        android:layout_height="70dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác nhận đơn hàng"
            android:textSize="28dp"
            android:textColor="@color/black"
            android:textStyle="bold"></TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/phimback"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_height="60dp">
        <Button
            android:id="@+id/backve"
            android:layout_marginLeft="20dp"
            android:background="@drawable/caretleft"
            android:layout_width="40dp"
            android:layout_height="40dp">
        </Button>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_data"
        android:layout_width="398dp"
        android:layout_height="79dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="10dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_data1"
        android:layout_width="397dp"
        android:layout_height="61dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="10dp" />
    <RelativeLayout
        android:id="@+id/hanghoa"
        android:layout_width="match_parent"
        android:layout_marginTop="210dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tx"
            android:padding="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="Tên nhà bán hàng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

        <ListView
            android:id="@+id/lvquanao"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_below="@+id/tx"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">

        </ListView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/them"
        android:layout_below="@id/hanghoa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Oder thêm"
            android:layout_marginLeft="20dp"
            android:id="@+id/tvod"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvthem"
            android:layout_width="391dp"
            android:layout_height="70dp"
            android:layout_below="@id/tvod"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:columnWidth="200dp"></androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/them">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/tieude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hóa đơn"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    >
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/tc"
                android:layout_below="@+id/tieude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng cộng"
                    android:textSize="16dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    >

                </TextView>
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"
                    android:text="270.000đ"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/phi"
                android:layout_below="@+id/tc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phí giao hàng:"
                    android:textSize="16dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    >
                </TextView>
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"
                    android:text="15.000đ"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/tong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tc"
                android:layout_marginTop="29dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="Tổng cộng:"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="16dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="10dp"
                    android:text="285.000đ"></TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="20dp"
                android:padding="5dp">
                <ImageView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/icon_time"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_local_dining" />
                <TextView
                    android:id="@+id/tvcd"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:text="Lấy dụng cụ ăn uống"
                    android:textSize="15dp"
                    android:layout_marginLeft="25dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_height="wrap_content">
                </TextView>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:thumb="@drawable/baseline_brightness_1_24"
                    android:checked="false"
                    android:track="@drawable/track_selector"></Switch>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="148dp"
                android:layout_marginLeft="20dp"
                android:padding="5dp">
                <ImageView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/icon_ghichu"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_assignment" />
                <TextView
                    android:id="@+id/ghichu"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:text="Ghi chú"
                    android:textSize="15dp"
                    android:layout_marginLeft="25dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Không có"
                    android:layout_marginLeft="290dp">
                </TextView>
                <ImageView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/icon_right"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="350dp"
                    android:src="@drawable/caretright" />

            </RelativeLayout>


            <Button
                android:id="@+id/btnmua"
                android:layout_below="@+id/phi"
                android:layout_width="175dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="80dp"
                android:textColor="@color/white"
                android:background="@drawable/button_thanhtoan"
                android:text="Đặt đơn - 65000"
                android:layout_marginBottom="10dp"
                android:layout_height="60dp">

            </Button>
            <Spinner
                android:background="@drawable/spiner"
                android:id="@+id/tien"
                android:layout_below="@+id/phi"
                android:layout_toLeftOf="@id/btnmua"
                android:layout_width="175dp"
                android:textColor="@color/white"
                android:entries="@array/spin"
                android:text="Đặt đơn - 65000"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="80dp"
                android:layout_height="60dp">
            </Spinner>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>

