<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DieuKhoanActivity">
    <RelativeLayout
        android:id="@+id/bths"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/phimback"

            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/backve"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/caretleft"
                android:contentDescription="@string/action_cart"
                android:onClick="goBack"
                tools:ignore="TouchTargetSizeCheck"></ImageView>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_below="@+id/phimback"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:text="CÁC THÀNH VIÊN"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:padding="20dp"
                android:layout_height="wrap_content">

            </TextView>

            <Spinner
                android:id="@+id/spiner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:entries="@array/list"
                android:minHeight="48dp"
                android:padding="8dp">

            </Spinner>

            <Spinner
                android:id="@+id/spiner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:entries="@array/list2"
                android:minHeight="48dp"
                android:padding="8dp">

            </Spinner>

            <Spinner
                android:id="@+id/spiner3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:entries="@array/list3"
                android:minHeight="48dp"
                android:padding="8dp">

            </Spinner>

            <Spinner
                android:id="@+id/spiner4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:entries="@array/list4"
                android:minHeight="48dp"
                android:padding="8dp"></Spinner>
            <Spinner
                android:id="@+id/spiner5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:entries="@array/list5"
                android:minHeight="48dp"
                android:padding="8dp"></Spinner>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>