<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_marginTop="10dp"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/tren"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <ImageButton
            android:id="@+id/quayve"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/caretleft"
            android:layout_centerVertical="true"
            ></ImageButton>
        <TextView
            android:id="@+id/ghang"
            android:layout_toRightOf="@+id/quayve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="GIỎ HÀNG(4)"
            android:layout_centerVertical="true"
            android:textStyle="bold"></TextView>
    </RelativeLayout>

    <ListView
        android:id="@+id/sanpham"
        android:layout_width="match_parent"
        android:layout_height="440dp"

        android:layout_below="@+id/tren"></ListView>

    <RelativeLayout
        android:id="@+id/duoi"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_below="@+id/sanpham">

        <RelativeLayout
            android:id="@+id/all"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_centerVertical="true">

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="30dp"
                android:layout_height="38dp">

            </CheckBox>

            <RelativeLayout
                android:id="@+id/all1"
                android:layout_width="51dp"
                android:layout_height="24dp"
                android:layout_toRightOf="@+id/checkbox">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:padding="4px"
                    android:text="Tất cả"
                    android:textSize="15dp"></TextView>

            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/all2"
            android:layout_width="218dp"
            android:layout_height="52dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <RelativeLayout
                android:id="@+id/thanhtoan"
                android:layout_width="102dp"
                android:layout_height="43dp">
                <TextView
                    android:id="@+id/tongthanhtoan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Tổng thanh toán">
                </TextView>
                <TextView
                    android:id="@+id/gia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tongthanhtoan"
                    android:textSize="16sp"
                    android:gravity="right"
                    android:text="0d">
                </TextView>
            </RelativeLayout>
            <Button
                android:id="@+id/muangay"
                android:layout_width="100dp"
                android:layout_height="52dp"
                android:layout_alignParentRight="true"
                android:textSize="11sp"
                android:text="Mua hàng"
                android:textColor="@color/white"
                android:background="#0A895D">
            </Button>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            app:itemBackground="@color/white"
            app:itemIconTint="@color/color_item_bottom_nav"
            app:menu="@menu/menu_bottom_nav"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>