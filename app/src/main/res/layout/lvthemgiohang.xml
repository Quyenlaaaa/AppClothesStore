<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/anh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/combo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true">

                </CheckBox>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/checkbox"
                    android:src="@drawable/image_22"
                    >

                </ImageView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/combo1">
                <RelativeLayout
                    android:id="@+id/tensp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Áo khoác nam Kaki - hiệu NokiaSamsung"
                        android:textSize="14sp"
                        android:textStyle="bold">

                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tensp">
                    <ImageView
                        android:id="@+id/dollar"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/currencycircledollar"
                        android:layout_centerVertical="true">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50.000d"
                        android:layout_toRightOf="@+id/dollar"
                        android:textStyle="bold">

                    </TextView>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>