<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.CaiDatActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/back"
        android:gravity="center"
        android:layout_height="70dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cài đặt"
            android:textSize="30sp"
            android:textStyle="bold"></TextView>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/phimback"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/backve"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/caretleft"
            android:contentDescription="Trở về"
            android:onClick="goBack"
            tools:ignore="TouchTargetSizeCheck" />
    </RelativeLayout>
    <ListView
        android:layout_marginTop="20dp"
        android:id="@+id/lvcaidat"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_below="@+id/phimback"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</RelativeLayout>