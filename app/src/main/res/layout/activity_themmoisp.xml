<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Themmoisp_Activity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:layout_marginBottom="20dp"
                android:id="@+id/idsp"
                android:paddingLeft="20dp"
                android:hint="Id:"
                android:background="@drawable/backgredit"
                android:layout_width="match_parent"
                android:layout_height="60dp">

            </EditText>
            <EditText
                android:layout_below="@+id/idsp"
                android:layout_marginBottom="20dp"
                android:id="@+id/tensp"
                android:paddingLeft="20dp"
                android:hint="Tên sản phẩm:"
                android:background="@drawable/backgredit"
                android:layout_width="match_parent"
                android:layout_height="60dp">

            </EditText>
            <EditText
                android:layout_below="@+id/tensp"
                android:layout_marginBottom="20dp"
                android:id="@+id/giasp"
                android:paddingLeft="20dp"
                android:hint="Giá:"
                android:background="@drawable/backgredit"
                android:layout_width="match_parent"
                android:layout_height="60dp">

            </EditText>
            <EditText
                android:layout_below="@+id/giasp"
                android:layout_marginBottom="20dp"
                android:id="@+id/mota"
                android:paddingLeft="20dp"
                android:hint="Mô tả:"
                android:background="@drawable/backgredit"
                android:layout_width="match_parent"
                android:layout_height="60dp">

            </EditText>
            <EditText
                android:layout_below="@+id/mota"
                android:layout_marginBottom="20dp"
                android:id="@+id/hinhanh"
                android:paddingLeft="20dp"
                android:hint="Hình ảnh:"
                android:background="@drawable/backgredit"
                android:layout_width="match_parent"
                android:layout_height="60dp">

            </EditText>
            <EditText
                android:layout_below="@+id/hinhanh"
                android:layout_marginBottom="20dp"
                android:id="@+id/soluong"
                android:paddingLeft="20dp"
                android:hint="Số lượng:"
                android:background="@drawable/backgredit"
                android:layout_width="match_parent"
                android:layout_height="60dp">

            </EditText>
            <Spinner
                android:layout_below="@+id/soluong"
                android:layout_marginBottom="20dp"
                android:id="@+id/madanhmuc"
                android:paddingLeft="20dp"


                android:background="@drawable/backgredit"
                android:layout_width="match_parent"
                android:layout_height="60dp">

            </Spinner>
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_dangnhap"
                android:id="@+id/them"
                android:text="Thêm mới"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_below="@id/madanhmuc"
                android:layout_width="match_parent"
                android:layout_height="60dp">

            </androidx.appcompat.widget.AppCompatButton>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>