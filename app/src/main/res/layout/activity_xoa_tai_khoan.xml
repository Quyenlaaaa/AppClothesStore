<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.XoaTaiKhoanActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/back"
        android:gravity="center"
        android:layout_height="70dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa tài khoản"
            android:textSize="25dp"
            android:textStyle="bold"></TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/phimback"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/backve"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/caretleft"
            android:contentDescription="@string/action_cart"
            android:onClick="goBack"
            tools:ignore="TouchTargetSizeCheck"></ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mainxtk"
        android:layout_marginTop="30dp"
        android:layout_below="@id/phimback"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/noidung"
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/anhtren"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/denied_1"
                    >
                </ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/chu"
                android:layout_below="@+id/anhtren"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/text1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="top"
                    android:layout_height="wrap_content"
                    android:text="Chúng tôi rất tiếc nếu bạn muốn rời đi. Nếu bạn tạm thời không muốn dùng tài khoản này, bạn có thể đăng xuất và đăng nhập lại bất cứ khi nào. Sau khi xoá tài khoản, bạn sẽ không thể:"
                    >
                </TextView>
                <TextView
                    android:id="@+id/text2"
                    android:layout_below="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="top"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:text="Đăng nhập vào ứng dụng Veget bằng tài khoản hiện tại."
                    tools:ignore="ExtraText">
                    >
                </TextView>
                <TextView
                    android:id="@+id/text3"
                    android:layout_below="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="top"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:text="Truy cập thông tin thanh toán và tài khoản ngân hàng đã lưu trên ứng dụng.">
                    >
                </TextView>
                <TextView
                    android:id="@+id/text4"
                    android:layout_below="@+id/text3"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="top"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:text=" Nếu bạn muốn đặt đơn trên ứng dụng Veget, bạn sẽ cần đăng nhập/ đăng ký bằng một tài khoản khác.">
                    >
                </TextView>
                <TextView
                    android:id="@+id/text5"
                    android:layout_below="@+id/text4"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="top"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:text="Hãy chắc chắn rằng tất cả đơn hàng của bạn đều đã hoàn thành cho đến thời điểm hiện tại. Nếu còn đơn bạn chưa hoàn thành thì bạn không thể xóa tài khoản này.">
                    >
                </TextView>

            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/noidung"
            android:paddingTop="30dp"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btxoa"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_dangnhap"
                android:text="Tiếp tục"
                android:textColor="@color/white">

            </androidx.appcompat.widget.AppCompatButton>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>