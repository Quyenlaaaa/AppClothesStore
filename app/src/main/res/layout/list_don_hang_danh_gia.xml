<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/chu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/hoanthanh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hoàn thành "
                    android:textSize="20sp"
                    android:textStyle="bold">
                </TextView>
                <TextView
                    android:id="@+id/madon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/hoanthanh"
                    android:text="# 12345"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#9B9B9B">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <TextView
                    android:id="@+id/ngay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20/6/2023"
                    android:textSize="15sp"
                    android:layout_centerVertical="true">
                </TextView>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:layout_below="@+id/chu">
            <RelativeLayout
                android:id="@+id/sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/anh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/anh6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/image_22">
                    </ImageView>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/thuonghieu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_toRightOf="@+id/anh">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/tenmon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tsp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Áo khoác nam Kaki - hiệu nokia samsung"
                                android:textStyle="bold"
                                android:textSize="17sp">

                            </TextView>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/diachi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tenmon"
                            android:text="30/38 Hải Hồ, P.Thanh Bình, Quận Hải Châu..."
                            android:textColor="#858585"></TextView>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/thuonghieu"
                    android:layout_toRightOf="@+id/anh"
                    android:paddingLeft="10dp">
                    <ImageView
                        android:id="@+id/circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/currencycircledollar">
                    </ImageView>
                    <TextView
                        android:id="@+id/gia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/circle"
                        android:paddingLeft="10dp"
                        android:textStyle="bold"
                        android:text="50.000đ"
                        android:textSize="20sp"></TextView>
                    <TextView
                        android:id="@+id/gido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/gia"
                        android:text=" (1 món) - Tiền mặt"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:textColor="#9B9B9B"></TextView>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sp">
                <RelativeLayout
                    android:id="@+id/dl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"
                    android:layout_alignParentRight="true">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/datlai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Đặt lại "
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/pencilsimpleline"
                        android:drawableRight="@drawable/pencilsimpleline"></androidx.appcompat.widget.AppCompatButton>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"
                    android:layout_toLeftOf="@+id/dl">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/danhgia"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Đánh giá "
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:background="@drawable/button_danhgia"
                        android:drawableLeft="@drawable/pencilsimpleline"
                        ></androidx.appcompat.widget.AppCompatButton>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>