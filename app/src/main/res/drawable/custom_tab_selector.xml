<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Tab được chọn -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#DC7CB342" /> <!-- Màu nền cho tab -->
            <corners android:radius="100dp" /> <!-- Độ bo tròn góc -->
            <size android:height="40dp" /> <!-- Đặt chiều cao cho tab, ví dụ: 40dp -->
        </shape>
    </item>

    <!-- Tab không được chọn -->
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="#F8F7F6"/>
            <stroke android:color="#DC7CB342"
                android:width="2dp"/> <!-- Màu nền cho tab được chọn -->
            <corners android:radius="100dp" /> <!-- Độ bo tròn góc -->
            <size android:height="40dp" />
            <!-- Đặt chiều cao cho tab, ví dụ: 40dp -->
        </shape>
    </item>
</selector>