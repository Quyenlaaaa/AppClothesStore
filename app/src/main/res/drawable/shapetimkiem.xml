<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" tools:ignore="MissingDefaultResource">
    <item>
        <shape android:shape="rectangle">
            <solid
                android:color="#DFEADFDF" >
            </solid>

            <!-- đặt thuộc tính màu và độ rộng của đường viền -->
            <stroke
                android:width="1dp"
                android:color="#6A703A3A" >
            </stroke>

            <!-- các thuộc tính căn chỉnh-->
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" >
            </padding>

            <!-- và đây là bán kính đường tròn ở 4 góc -->
            <corners
                android:radius="1000dp">
            </corners>

        </shape>
    </item>
</selector>