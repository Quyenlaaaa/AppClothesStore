<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="5dp" android:left="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Màu nền của Spinner -->
            <stroke android:width="1dp" android:color="#616060" /> <!-- Màu viền của Spinner -->
            <corners android:topLeftRadius="5dp" android:bottomLeftRadius="5dp" /> <!-- Đặt bán kính góc trên bên trái và dưới bên trái -->
        </shape>
    </item>
</selector>
